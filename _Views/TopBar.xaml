<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerForge._Views.TopBar">

    <HorizontalStackLayout x:Name="DropDownOptionsStack">
        <!-- Known Projects-->
        <VerticalStackLayout>
            <!-- Button to droop down known projects list-->
            <Button
                x:Name="CurrentProjectSelector"
                Text="{Binding ProjectsManagementButtonLabel}"
                Command="{Binding ShowKnownProjectsCommand}"
                BackgroundColor="LightCoral" />
            
            <ListView ItemsSource="{Binding Projects}"
              IsVisible="{Binding IsKnownProjectsListVisible}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>

        <!-- Other buttons with drop down lists -->
        <VerticalStackLayout>
            
        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentView>