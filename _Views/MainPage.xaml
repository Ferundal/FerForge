<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerForge._Views.MainPage"
             Title="MainPage"
             xmlns:local="clr-namespace:FerForge._Views">

    <AbsoluteLayout>

        <!-- Main Content Block (Content) will be below -->
        <local:Content AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                   AbsoluteLayout.LayoutFlags="All"
                   ZIndex="0" />

        <!-- Top Bar will be on top -->
        <local:TopBar x:Name="TopBar"
                       AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                       AbsoluteLayout.LayoutFlags="All"
                       ZIndex="1" />

    </AbsoluteLayout>
</ContentPage>