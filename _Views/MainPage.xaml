<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerForge._Views.MainPage"
             Title="MainPage"
             xmlns:local="clr-namespace:FerForge._Views">

    <AbsoluteLayout>

        <!-- Main Content Block -->
        <local:Content AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                               AbsoluteLayout.LayoutFlags="All" />

        <!-- Dropdown Menu Block -->
        <local:ProjectMenu AbsoluteLayout.LayoutBounds="0.1, 0.1, 0.8, 0.3"
                           AbsoluteLayout.LayoutFlags="All"
                           IsVisible="{Binding IsMenuVisible}" />

    </AbsoluteLayout>
</ContentPage>