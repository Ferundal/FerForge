<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerForge._Views.ProjectMenu">

    <HorizontalStackLayout x:Name="DropDownOptionsStack">
        <!-- Known Projects-->
        <VerticalStackLayout>
            <!-- Button to droop down known projects list-->
            <Button Text="Menu Button"
                    Command="{Binding OnButtonClick}"
                    BackgroundColor="LightCoral" />

            <!-- Known projects droop down list-->
            <Label Text="{Binding MaxButtonHeight}" BackgroundColor="LightCoral" />
        </VerticalStackLayout>

        <!-- Other buttons with drop down lists -->
        <VerticalStackLayout>
            
        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentView>